{
	"extends": "astro/tsconfigs/strict",
	"include": [
		"astro.config.ts",
		".astro/types.d.ts",
		"script/**/*",
		"src/**/*"
	],
	"exclude": [
		"src/assets",
		"src/styles",
		"src/content/posts",
		"src/content/spec"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"removeComments": true,
		"allowJs": false,
		"incremental": true,
		"tsBuildInfoFile": "node_modules/.astro/.tsbuildinfo",
		"skipLibCheck": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@config/*": ["src/config/*"],
			"@constants/*": ["src/constants/*"],
			"@i18n/*": ["src/i18n/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
			"@/*": ["src/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	}
}
